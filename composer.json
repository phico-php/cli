{
  "name": "phico/cli",
  "description": "Lightweight terminal support for Phico",
  "type": "library",
  "license": "BSD-3-Clause",
  "autoload": {
    "psr-4": {
      "Phico\\Cli\\": "src/"
    }
  },
  "authors": [
    {
      "name": "indgy",
      "email": "me@indgy.uk"
    }
  ],
  "minimum-stability": "stable",
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true,
      "pestphp/pest-plugin": true
    }
  },
  "require": {
    "php": "^8.0"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.11",
    "pestphp/pest": "^2.34"
  },
  "scripts": {
    "analyse": "vendor/bin/phpstan analyse src/"
  }
}
